<div id="dashboard">
    <section class="hero welcome">
        <div class="hero__content">
            <div class="welcome__content">
                <img class="hero__logo avatar" src="{{user.avatar}}" alt="avatar">
                <h1 class="hero__title">Welcome, {{user.username}}</h1>
            </div>
            <div class="recommandations__content">
                <h4 class="hero__title">Looking for a <span>great movie</span> based on your <span>preferred movies</span> ?</h4>
                {{#if recommandations}}
                <h3 class="hero__title underline">Our recommandations</h3>
                <div id="recommandations"class="recommandations__movies">
                    {{>recommandations/recommandationsmovies parameter=recommandations}}
            </div>
                <a id="refreshRecommandations" class="btn btn--primary"><svg class="icon icon--white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M17.65 6.35A7.958 7.958 0 0 0 12 4a8 8 0 0 0-8 8a8 8 0 0 0 8 8c3.73 0 6.84-2.55 7.73-6h-2.08A5.99 5.99 0 0 1 12 18a6 6 0 0 1-6-6a6 6 0 0 1 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35Z"/></svg>
                Refresh Recommandations</a>
                {{else}}
                <h4 class="hero__title">Rate a minimum of <span>3 movies</span> and enjoy our <span>magical recommandations !</span></h4>
                {{/if}}
            </div>
        </div>
    </section>

    {{>watchlistpartial parameter=watchListMovies}}
    {{>featuredmovies.partial featuredMovies}}
</div>

{{#extend "css"}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
{{/extend}}
{{#extend "scripts"}}
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
  <script src="/js/swiper.js"></script>
  <script src="/js/movie.js"></script>
  <script src="/js/recommandations.js"></script>
{{/extend}}