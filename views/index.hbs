<header class="header container">
  <a href="/"><img src="/images/logo.png" alt="logo" class="header__logo" /></a>
  <div class="header__searchbar">
    <div class="input__container"><svg
        class="input__icon"
        xmlns="http://www.w3.org/2000/svg"
        width="256"
        height="256"
        viewBox="0 0 256 256"
      >
        <path
          fill="currentColor"
          d="m229.66 218.34l-50.07-50.06a88.11 88.11 0 1 0-11.31 11.31l50.06 50.07a8 8 0 0 0 11.32-11.32ZM40 112a72 72 0 1 1 72 72a72.08 72.08 0 0 1-72-72Z"
        /></svg>
      <input
        class="header__search input__field"
        type="text"
        name="search"
        placeholder="search..."
      />
    </div>
  </div>
  <a class="header__signin" href="auth/login">SIGN IN</a>
</header>
<section class="hero">
  <div class="hero__content">
    <img src="/images/logo.png" alt="logo" class="hero__logo" />
    <h1 class="hero__title">POPCORN TIME</h1>
    <p>Discover Movies and Best Recommendations for a perfect moment !</p>
    <button class="btn btn--primary" type="submit">JOIN FOR FREE</button>
  </div>
</section>
<section id="popular-movies">
  <h2>Popular Movies</h2>
  <div class="swiper-container swiper">
    <div class="swiper-wrapper">
      {{#each popularMovies}}
        {{>moviecard.partial this}}
      {{/each}}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>
<section id="trending-movies" class="grid-cards">
  <h2>Trending Movies</h2>
  <div class="swiper-container swiper">
    <div class="swiper-wrapper">
      {{#each trendingMovies}}
        {{>moviecard.partial this}}
      {{/each}}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>
<section id="popular-movies" class="grid-cards">

</section>
<footer class="footer"></footer>

{{#section "css"}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
{{/section}}
{{#section "script"}}
  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
{{/section}}