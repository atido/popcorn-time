<header class="header container {{headerPosition}}">
  <a href="/"><img src="/images/logo.png" alt="logo" class="logo" /></a>
  <div class="header__searchbar">
    <form action="/movie/search">
      <div class="input__container"><svg
          class="icon input__icon"
          xmlns="http://www.w3.org/2000/svg"
          width="256"
          height="256"
          viewBox="0 0 256 256"
        >
          <path
            fill="currentColor"
            d="m229.66 218.34l-50.07-50.06a88.11 88.11 0 1 0-11.31 11.31l50.06 50.07a8 8 0 0 0 11.32-11.32ZM40 112a72 72 0 1 1 72 72a72.08 72.08 0 0 1-72-72Z"
          /></svg>
        <input
          class="header__search input__field"
          type="search"
          name="query"
          placeholder="search..."
        />
      </div>
    </form>
  </div>
  <a class="header__signin" href="/auth/login">SIGN IN</a>
</header>